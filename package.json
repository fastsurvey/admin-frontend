{
    "name": "fastsurvey-console",
    "version": "0.3.0",
    "author": {
        "name": "Moritz Makowski",
        "email": "moritz@dostuffthatmatters.dev",
        "url": "https://dostuffthatmatters.dev/"
    },
    "dependencies": {
        "assert": "^2.0.0",
        "axios": "^0.20.0",
        "express": "^4.17.1",
        "js-cookie": "^2.2.1",
        "lodash": "^4.17.20",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.1",
        "react-router-dom": "^5.2.0",
        "react-scroll": "^1.8.1",
        "tailwindcss-interaction-variants": "2.x",
        "autoprefixer": "^10.1.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "postcss": "^8.2.10",
        "postcss-cli": "^8.3.1",
        "react-scripts": "3.4.3",
        "@tailwindcss/jit": "^0.1.18",
        "tailwindcss": "^2.1.1",
        "typescript": "~3.7.2",
        "typeface-quicksand": "^1.1.13"
    },
    "scripts": {
        "develop": "react-scripts start",
        "build": "yarn build:tailwind && react-scripts build",
        "analyze": "source-map-explorer 'build/static/js/*.js'",
        "start": "node server.js",
        "test": "react-scripts test",
        "develop:tailwind": "NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/tailwind.out.css -w",
        "build:tailwind": "NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/tailwind.out.css"
    },
    "eslintConfig": {
        "extends": "react-app",
        "plugins": [
            "react-hooks"
        ],
        "rules": {
            "react-hooks/rules-of-hooks": "error",
            "react-hooks/exhaustive-deps": "warn"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/js-cookie": "^2.2.6",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.166",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.51",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/react-router-dom": "^5.1.6",
        "@types/react-scroll": "^1.8.2",
        "source-map-explorer": "^2.5.0"
    }
}
